# Permite acesso a todos os arquivos e diretórios
<IfModule mod_autoindex.c>
  Options +Indexes
</IfModule>

# Permite acesso total a todos os tipos de arquivos
<FilesMatch ".*">
  Require all granted
</FilesMatch>

# Desativa qualquer bloqueio geral
Order Allow,Deny
Allow from all

# Remove restrições para arquivos .html, .css, .js, imagens etc.
<IfModule mod_mime.c>
  AddType text/html .html
  AddType text/css .css
  AddType application/javascript .js
  AddType image/jpeg .jpg .jpeg
  AddType image/png .png
  AddType image/gif .gif
  AddType image/svg+xml .svg
  AddType font/woff2 .woff2
  AddType font/woff .woff
  AddType font/ttf .ttf
</IfModule>

# Evita interferência de ModSecurity (em alguns servidores)
<IfModule mod_security.c>
  SecFilterEngine Off
  SecFilterScanPOST Off
</IfModule>